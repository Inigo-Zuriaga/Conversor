@model List<Coin>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <h2 class="mb-3">Lista de Monedas</h2>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var moneda in Model)
                    {
                        <tr>
                            <td>@moneda.Id</td>
                            <td>@moneda.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>